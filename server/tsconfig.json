{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDirs": ["src", "../shared/src"],
    "types": ["node"],
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "resolveJsonModule": true,
    "target": "ES2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@server/*": ["src/*"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../shared/src"
  ]
}
